{
    "manifest_version": 2,
    "name": "Test Extension",
    "version": "0.1",
    "description": "Test Extension for Development",

    "permissions": ["activeTab"],
    "content_scripts": [
        {
        "matches": ["https://www.youtube.com/*"],
        "js": ["test.js", "contentScript.js"]
        }
    ],

    "background": {
        "persistent": true,
        "scripts": ["backgroundScript.js"]
        },
    
    "browser_action": {
        "default_icon": {
            "32": "icon.png"
        }
    }
}